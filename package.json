{
  "name": "agroshield-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter='!./packages/docs'",
    "build:all": "turbo run build",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:packages": "turbo run build --filter='./packages/*' --filter='!./packages/docs'",
    "dev": "turbo run dev --filter='!./packages/contracts' --filter='!./packages/docs'",
    "dev:app": "pnpm --filter @agroshield/app dev",
    "dev:landing-page": "pnpm --filter @agroshield/landing-page dev",
    "dev:api": "pnpm --filter @agroshield/api-server dev",
    "lint": "turbo run lint",
    "forc:fmt": "forc fmt --path packages/contracts",
    "forc:build": "forc build --path packages/contracts",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:up-dev": "docker compose -f docker-compose.dev.yml up -d db",
    "db:down-dev": "docker compose -f docker-compose.dev.yml down"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "turbo": "^2.4.4"
  }
}
